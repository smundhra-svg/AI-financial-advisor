{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@services/*": ["services/*"],
      "@db/*": ["db/*"],
      "@data/*": ["data/*"],
      "@routes/*": ["routes/*"]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
 "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/tests/**"]
}