{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "jsx": "react-jsx", // For React 17 JSX Transform
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true, // Optional: Enables strict type checking options
    "forceConsistentCasingInFileNames": true,
    "outDir": "./src/dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "noEmit": true, // Prevents emitting output (since we're not compiling TS to JS here)
    "baseUrl": "./src", // Helps with absolute imports
    "paths": {
      "@components/*": ["Components/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"]
    },
    "lib": ["es2020", "dom"]  
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts", "src/Auth/keycloak.js",
  ],
  "exclude": [
    "node_modules",
    "build",
    "public",
    "assets"
  ]
}