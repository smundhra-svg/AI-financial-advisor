{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "jsx": "react-jsx",

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "noEmit": true,

    "baseUrl": "./src",
    "paths": {
      "@components/*": ["Components/*"],
      "@pages/*": ["pages/*"],
      "@assets/*": ["assets/*"],
       "@hooks/*": ["hooks/*"],
       "@service/*": ["service/*"]
    },

    "lib": ["ES2020", "DOM"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
